<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.java.mobile.phone.user.mapper.UserMapper">
    <insert id="insert" parameterType="java.util.Map" useGeneratedKeys="true" keyProperty="id">
        <!--<selectKey keyProperty="id" resultType="java.lang.Long">
            select last_insert_id()
        </selectKey>-->
        INSERT INTO `user`
        (
        username,
        `password`,
        telphone,
        avatar,
        is_disable
        )
        VALUES
        (
        #{username},
        #{password},
        #{telphone},
        #{avatar},
        #{is_disable}
        );
    </insert>

    <select id="getByUsername" parameterType="java.lang.String" resultType="java.util.Map">
        select a.* from `user` a where a.username = #{username}
    </select>

    <select id="getByUserId" parameterType="java.util.Map" resultType="java.util.Map">
        select a.* from `user` a where a.id = #{user_id}
    </select>
</mapper>